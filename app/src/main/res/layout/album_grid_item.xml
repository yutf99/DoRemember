<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/iv_album_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        auto:layout_auto_basewidth="height"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/default_bg"/>

    <CheckBox
        android:id="@+id/ckb_image_select"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="@dimen/defult_5_dp"
        android:layout_marginEnd="@dimen/defult_5_dp"
        android:background="@drawable/anim_album_selected"
        android:layout_alignParentEnd="true"
        android:button="@null"
        android:focusable="false"/>
</RelativeLayout>