<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/defult_24_dimen"
        android:gravity="center_horizontal"
        tools:context="com.white.hot.doremember.function.anim.AnimationActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/defult_300_dimen"
                android:layout_height="@dimen/defult_300_dimen"
                android:scaleType="centerCrop"
                android:src="@drawable/default_bg"/>
            <Button
                android:id="@+id/broswer"
                android:layout_width="@dimen/defult_100_dimen"
                android:layout_height="@dimen/defult_50_dimen"
                android:background="@drawable/button_water_blue_style"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/iv"
                android:layout_marginLeft="@dimen/defult_24_dimen"
                android:layout_centerVertical="true"
                android:text="浏览"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_anim_property"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="属性动画"
                android:layout_marginLeft="@dimen/defult_24_dimen"
                android:layout_marginRight="@dimen/defult_24_dimen"
                android:textSize="@dimen/defult_30_dimen"
                android:textColor="@color/white"
                android:background="@drawable/button_water_blue_style"/>
            <Button
                android:id="@+id/btn_anim_tween"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/defult_24_dimen"
                android:layout_marginRight="@dimen/defult_24_dimen"
                android:layout_height="wrap_content"
                android:text="补间动画"
                android:textSize="@dimen/defult_30_dimen"
                android:textColor="@color/white"
                android:background="@drawable/button_water_blue_style"/>

            <Button
                android:id="@+id/btn_anim_frame"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/defult_24_dimen"
                android:layout_marginRight="@dimen/defult_24_dimen"
                android:layout_height="wrap_content"
                android:text="帧动画"
                android:textSize="@dimen/defult_30_dimen"
                android:textColor="@color/white"
                android:background="@drawable/button_water_blue_style"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_anim_fan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="风扇"
            android:textSize="@dimen/defult_30_dimen"
            android:layout_marginTop="@dimen/defult_30_dimen"
            android:textColor="@color/white"
            android:background="@drawable/button_water_blue_style"/>
        <Button
            android:id="@+id/btn_noti_s3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="listview"
            android:textSize="@dimen/defult_30_dimen"
            android:layout_marginTop="@dimen/defult_30_dimen"
            android:textColor="@color/white"
            android:background="@drawable/button_water_blue_style"/>

        <Button
            android:id="@+id/btn_noti_s5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gridview"
            android:textSize="@dimen/defult_30_dimen"
            android:layout_marginTop="@dimen/defult_30_dimen"
            android:textColor="@color/white"
            android:background="@drawable/button_water_blue_style"/>

        <Button
            android:id="@+id/btn_noti_s4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="platte"
            android:textSize="@dimen/defult_30_dimen"
            android:layout_marginTop="@dimen/defult_30_dimen"
            android:textColor="@color/white"
            android:background="@drawable/button_water_blue_style"/>

        <com.white.hot.doremember.widget.ToggleButton
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/defult_30_dimen"/>

       <!-- <com.dd.CircularProgressButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="演示"/>-->
    </LinearLayout>
</ScrollView>

