<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/defult_20_dimen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defult_15_dimen"
            android:background="@drawable/me"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/defult_20_dimen"
            android:paddingLeft="@dimen/defult_30_dimen"
            android:paddingRight="@dimen/defult_20_dimen"
            android:paddingTop="@dimen/defult_30_dimen"
            android:text="学会坚强"
            android:textColor="@color/white"
            android:textSize="@dimen/defult_30_dimen"/>

        <com.white.hot.doremember.widget.CircleImageView
            android:layout_width="@dimen/defult_100_dimen"
            android:layout_height="@dimen/defult_100_dimen"
            android:src="@drawable/fan"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/defult_10_dimen"
        android:background="@drawable/halftransparent_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/defult_5_dimen"
        android:paddingLeft="@dimen/defult_20_dimen"
        android:paddingRight="@dimen/defult_20_dimen"
        android:paddingTop="@dimen/defult_5_dimen"
        android:text="2016-10-23"
        android:textColor="@color/white"
        android:textSize="@dimen/defult_20_dimen"/>
</LinearLayout>