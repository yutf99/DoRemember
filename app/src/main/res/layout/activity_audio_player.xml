<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.white.hot.doremember.function.audio.AudioPlayerActivity">

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="btn1"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_margin="@dimen/defult_10_dimen"
            android:background="@drawable/button_water_blue_style"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Group模糊"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_margin="@dimen/defult_10_dimen"
            android:background="@drawable/button_water_blue_style"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="view模糊"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_margin="@dimen/defult_10_dimen"
            android:background="@drawable/button_water_blue_style"
            android:elevation="0dp" />
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="btn4"
            android:layout_weight="1"
            android:layout_margin="@dimen/defult_10_dimen"
            android:textColor="@color/white"
            android:background="@drawable/button_water_blue_style"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/blur_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btns">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/wow"
            android:scaleType="fitXY"/>
    </RelativeLayout>
</RelativeLayout>
