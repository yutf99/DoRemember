<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anim_gray_bg"
    tools:context="com.white.hot.doremember.function.anim.FanActivity">

    <com.white.hot.doremember.widget.RandomLaserView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"/>
    <ImageView
        android:id="@+id/iv_fan"
        android:layout_width="500px"
        android:layout_height="500px"
        auto:layout_auto_basewidth="height"
        android:layout_centerInParent="true"
        android:src="@drawable/fan"
        android:scaleType="fitXY"/>
    <RadioGroup
        android:id="@+id/rg_control"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/defult_80_dimen"
        android:layout_height="@dimen/defult_50_dimen"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/class_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/anim_fan"
            android:layout_marginLeft="@dimen/defult_5_dimen"
            android:layout_marginRight="@dimen/defult_5_dimen"
            android:button="@null"
            android:checked="true"
            android:textColor="@color/white"
            android:text="一档"/>
        <RadioButton
            android:id="@+id/class_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/defult_5_dimen"
            android:background="@drawable/anim_fan"
            android:button="@null"
            android:textColor="@color/white"
            android:text="二档"/>
        <RadioButton
            android:id="@+id/class_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/anim_fan"
            android:layout_marginRight="@dimen/defult_5_dimen"
            android:button="@null"
            android:textColor="@color/white"
            android:text="三档"/>
        <RadioButton
            android:id="@+id/class_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/anim_fan"
            android:layout_marginRight="@dimen/defult_5_dimen"
            android:button="@null"
            android:textColor="@color/white"
            android:text="四档"/>
    </RadioGroup>
</RelativeLayout>
